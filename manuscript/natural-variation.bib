  journal = {BMC evolutionary biology},
  author = {Hoogewijs, David and De Henau, Sasha and Dewilde, Sylvia and Moens, Luc and Couvreur, Marjolein and Borgonie, Gaetan and Vinogradov, Serge N. and Roy, Scott W. and Vanfleteren, Jacques R.},
