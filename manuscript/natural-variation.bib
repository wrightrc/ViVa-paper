@article{monshausen_dynamics_2011,
  title = {Dynamics of Auxin-Dependent {{Ca2}}+ and {{pH}} Signaling in Root Growth Revealed by Integrating High-Resolution Imaging with Automated Computer Vision-Based Analysis},
