@article{gruber_contrasting_2012,
  title = {Contrasting {{Properties}} of {{Gene}}-{{Specific Regulatory}}, {{Coding}}, and {{Copy Number Mutations}} in {{Saccharomyces}} Cerevisiae: {{Frequency}}, {{Effects}}, and {{Dominance}}},
