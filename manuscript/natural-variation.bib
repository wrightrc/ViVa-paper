  language = {en},
  number = {3},
  journal = {Genetics},
  author = {Schmid, Karl J. and {Ramos-Onsins}, Sebastian and {Ringys-Beckstein}, Henriette and Weisshaar, Bernd and {Mitchell-Olds}, Thomas},
