  year = {2009},
  keywords = {Animals,Sequence Alignment,Phylogeny,Species Specificity,Evolution; Molecular,Algorithms,Gene Library,Sequence Analysis; DNA,DNA; Ribosomal,Host-Parasite Interactions,RNA; Ribosomal,Beetles,Bayes Theorem,Nematoda,Expressed Sequence Tags,Ribosomal Proteins},
  pages = {212},
