@article{walsh_mutations_2006,
  title = {Mutations in an {{Auxin Receptor Homolog AFB5}} and in {{SGT1b Confer Resistance}} to {{Synthetic Picolinate Auxins}} and {{Not}} to 2,4-{{Dichlorophenoxyacetic Acid}} or {{Indole}}-3-{{Acetic Acid}} in {{Arabidopsis}}},
