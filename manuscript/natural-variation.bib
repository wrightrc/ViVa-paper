  year = {2012},
  keywords = {Indoleacetic Acids,Biological Transport,Plant Growth Regulators,Models; Biological,Homeostasis,Computer Simulation,Dose-Response Relationship; Drug,Hydrogen-Ion Concentration,Plant Cells,Feedback; Physiological},
  pages = {84-94},
  pmid = {22142622}
}

@article{li_transcript_2011,
