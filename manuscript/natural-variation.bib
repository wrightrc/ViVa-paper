@article{hollender_floral_2014,
  title = {Floral Transcriptomes in Woodland Strawberry Uncover Developing Receptacle and Anther Gene Networks},
  issn = {1532-2548},
  doi = {10.1104/pp.114.237529},
  abstract = {Flowers are reproductive organs and precursors to fruits and seeds. While the basic tenets of the ABCE model of flower development are conserved in angiosperms, different flowering plants exhibit different and sometimes unique characteristics. A distinct feature of strawberry flowers is the development of several hundreds of individual apocarpous (unfused) carpels. These individual carpels are arranged in a spiral pattern on the subtending stem tip, the receptacle. Therefore, the receptacle is an integral part of the strawberry flower and is of significant agronomic importance, being the precursor to strawberry fruit. Taking advantage of next-generation-sequencing and Laser Capture Microdissection (LCM), we generated different tissue- and stage- transcriptomic profiling of woodland strawberry flower development. Using pair-wise comparisons and weighted gene co-expression network analysis (WGCNA), we identified modules of co-expressed genes and hub genes of tissue-specific networks. Of particular importance is the discovery of a developing receptacle-specific module exhibiting similar molecular features to those of young floral meristems. The strawberry homologs of number of meristem regulators including LOST MERISTEM and WUSCHEL are identified as hub genes operating in the developing receptacle network. Further, almost 25\% of the F-box genes in the genome are transiently induced in developing anthers at the meiosis stage, indicating active protein degradation. Together, this work provides important insights into the molecular networks underlying strawberry's unique reproductive developmental processes. This extensive floral transcriptome dataset is publicly available and can be readily queried at the project website, serving as an important genomic resource for the plant biology research community.},
  language = {ENG},
  journal = {Plant physiology},
  author = {Hollender, Courtney A and Kang, Chunying and Darwish, Omar and Geretz, Aviva and Matthews, Benjamin F and Slovin, Janet and Alkharouf, Nadim and Liu, Zhongchi},
