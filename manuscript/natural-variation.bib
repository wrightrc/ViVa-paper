  number = {2},
  journal = {Virus Research},
  author = {Olarte Castillo, X. A. and Fermin, G. and Tabima, J. and Rojas, Y. and Tennant, P. F. and Fuchs, M. and Sierra, R. and Bernal, A. J. and Restrepo, S.},
