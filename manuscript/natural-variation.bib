@article{liu_scf_2014,
  title = {{{SCF}}({{SLF}})-Mediated Cytosolic Degradation of {{S}}-{{RNase}} Is Required for Cross-Pollen Compatibility in {{S}}-{{RNase}}-Based Self-Incompatibility in {{Petunia}} Hybrida},
