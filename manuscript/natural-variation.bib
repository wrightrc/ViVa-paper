@article{chai_comprehensive_2016,
  title = {Comprehensive {{Analysis}} and {{Expression Profiling}} of the {{OsLAX}} and {{OsABCB Auxin Transporter Gene Families}} in {{Rice}} ({{Oryza}} Sativa) under {{Phytohormone Stimuli}} and {{Abiotic Stresses}}},
