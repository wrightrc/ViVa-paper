@article{yogeeswaran_comparative_2005,
  title = {Comparative Genome Analyses of {{Arabidopsis}} Spp.: Inferring Chromosomal Rearrangement Events in the Evolutionary History of {{A}}. Thaliana},
  volume = {15},
