@article{deloof_endocrine_2012,
  title = {Endocrine Archeology: Do Insects Retain Ancestrally Inherited Counterparts of the Vertebrate Releasing Hormones {{GnRH}}, {{GHRH}}, {{TRH}}, and {{CRF}}?},
