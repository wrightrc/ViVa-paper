@article{figueroa_arabidopsis_2012,
  title = {The {{Arabidopsis JAZ2}} Promoter Contains a {{G}}-{{Box}} and Thymidine-Rich Module That Are Necessary and Sufficient for Jasmonate-Dependent Activation by {{MYC}} Transcription Factors and Repression by {{JAZ}} Proteins},
