  keywords = {Animals,Phylogeny,Evolution; Molecular,Sequence Analysis; DNA,Hemiptera,Cell Nucleus,DNA; Mitochondrial,Likelihood Functions,Bayes Theorem,Symbiosis,Bacteroidetes},
  pages = {992-1003},
