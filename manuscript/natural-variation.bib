  author = {Luo, Ji and Wei, Kun and Wang, Shuanghua and Zhao, Weiye and Ma, Canrong and Hettenhausen, Christian and Wu, Jinsong and Cao, Guoyan and Sun, Guiling and Baldwin, Ian T. and Wu, Jianqiang and Wang, Lei},
