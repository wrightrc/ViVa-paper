  month = may,
  year = {2012},
  keywords = {Animals,Plant Proteins,Plant Diseases,Insect Vectors,Plant Stems,Carboxylic Ester Hydrolases,Catechol Oxidase,Cyclophilins,Hemiptera,Rhizobiaceae,Solanum tuberosum,Starch},
  pages = {e37345},
  file = {/Users/clayw/Zotero/storage/7G258JHA/Alvarado et al. - 2012 - Molecular and Physiological Properties Associated .pdf;/Users/clayw/Zotero/storage/H7H3FDVK/infodoi10.1371journal.pone.html}
