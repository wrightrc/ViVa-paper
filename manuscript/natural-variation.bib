  file = {/Users/clayw/Zotero/storage/XXRTBUVQ/Ouangraoua and Raffinot - 2013 - On the Identification of Conflicting Contiguities .pdf;/Users/clayw/Zotero/storage/GG69QKXZ/cmb.2013.html},
